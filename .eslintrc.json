{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      1,
      { "argsIgnorePattern": "res|next|resolve|reject|^err" }
    ],
    "arrow-body-style": [2, "as-needed"],
    "max-len": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off"
  }
}
